{
  "compilerOptions": {
    "target": "ES6",
    "module": "ESNEXT",
    "moduleResolution": "node",
    "outDir": "./dist",
    "rootDir": "api",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "allowJs": true
  },
  "include": ["api/**/*.ts"],
  "exclude": ["node_modules"]
}
